train_net: "c3d_IsoGD_RGB_finetuning_train.prototxt"
# test_net: "we don't use testing on the fly"
test_iter: 100
test_interval: 0
base_lr: 0.0001
momentum: 0.9
weight_decay: 0.0005
lr_policy: "step"
gamma: 0.9
stepsize: 5000
# Display every 200 iterations
display: 200
# The maximum number of iterations
max_iter: 100000
# snapshot intermediate results
snapshot: 5000
snapshot_prefix: "c3d_RGB_32f_finetune_no_meanfile_1st"
# solver mode: CPU or GPU
solver_mode: GPU
device_id: 0
